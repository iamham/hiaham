.menu
  font-family 'LatoWebSemibold'
  font-size 20px
  line-height 3
  &__items
    position relative
    display block
    list-style none
    li
      float left
      margin 0 15px
      height 43px
      border-bottom 2px solid #424242
      &:hover
        border none
      &:last-child
        margin 0
    a
      color inherit
      text-decoration none
      font-weight 600
      text-transform uppercase
