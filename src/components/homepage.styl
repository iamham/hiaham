.homepage
  background white
  height 100%

  &__features
    position absolute
    top 50%
    left 50%
    margin -65px 0 0 -225px
    width 450px
    height 130px
    text-align center
    color white
  &__sliding-features
    overflow hidden
    text-align center
    height 70px
    width 450px
    ul
      margin-top 0
      list-style none
      animation-name change
      animation-duration 10s
      animation-iteration-count infinite
      padding 0
      li
        line-height 70px
        margin 0
        font-size 60px
        font-weight 600

.cd-background-wrapper
  background-color white
  position relative
  overflow hidden
  perspective 4000px

.cd-floating-background
  position relative
  top 0
  left 0
  transform-style preserve-3d
  transform translateZ(0)

.cd-floating-background.is-absolute
  position absolute

.cd-floating-background img
  display block
  width 100%
  backface-visibility hidden
  background-color rgba(255, 255, 255, 0.01)

.cd-floating-background img:not(:first-child)
  position absolute
  top 0
  left 0

.cd-floating-background img:first-child
  transform translateZ(0px)

.cd-floating-background img:nth-child(2)
  transform translateZ(100px)

.cd-floating-background img:nth-child(3)
  transform translateZ(250px)

.cd-floating-background img:nth-child(4)
  transform translateZ(450px)

.cd-floating-background img:nth-child(5)
  opacity 0.3
  transform translateZ(1000px)

.no-preserve-3d .cd-floating-background
  position relative

  @keyframes opacity {
    0%, 100% {opacity:0;}
    50% {opacity:1;}
  }

  @keyframes change {
    0%, 12%, 100% {transform:translateY(0);}
    17%,29% {transform:translateY(-25%);}
    34%,46% {transform:translateY(-50%);}
    51%,63% {transform:translateY(-75%);}
    68%,80% {transform:translateY(-50%);}
    85%,97% {transform:translateY(-25%);}
  }
